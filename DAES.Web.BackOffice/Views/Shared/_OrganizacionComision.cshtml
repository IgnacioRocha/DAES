@model IEnumerable<DAES.Model.SistemaIntegrado.ComisionLiquidadora>

<div id="divDirectorio" name="divDirectorio" style="display:none">
    <h4>Comisión Liquidadora</h4>
    <table class="table table-striped dataTable">
        @for (var i = 0; i < Model.Count(); i++)
        {
            @Html.HiddenFor(model => model.ToArray()[i].OrganizacionId)
            @Html.HiddenFor(model => model.ToArray()[i].ComisionLiquidadoraId)
            <thead>
                <tr>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].EsMiembro, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].NombreCompleto, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].Rut, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].Cargo.Nombre, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].Genero.Nombre, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].FechaInicio, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                    <th>
                        @Html.LabelFor(m => Model.ToArray()[i].FechaTermino, new { htmlAttributes = new { @class = "control-label col-6" } })
                    </th>
                </tr>
            </thead>
            <tbody>
                @Html.HiddenFor(model => model.ToArray()[i].CargoId)
                @Html.HiddenFor(model => model.ToArray()[i].GeneroId)
                <tr>
                    <th>
                        @*<input type="checkbox" name="directorio[@i]" id="directorio[@i]" value="@i">*@
                        @Html.EditorFor(m => Model.ToArray()[i].EsMiembro, new { htmlAttributes = new { @class = "form-control", @style = "height: 20px; margin: 14px 0;" } })
                    </th>
                    <th>
                        @Html.EditorFor(m => Model.ToArray()[i].NombreCompleto, new { htmlAttributes = new { @class = "form-control col-6" } })
                    </th>
                    <th>
                        @Html.EditorFor(m => Model.ToArray()[i].Rut, new { htmlAttributes = new { @class = "form-control col-6" } })
                    </th>
                    <th>
                        @Html.DropDownListFor(model => model.ToArray()[i].CargoId, new SelectList(ViewBag.CargoId, "Value", "Text", Model.ToArray()[i].CargoId), "Seleccione...", htmlAttributes: new { @class = "form-control col-6" })
                    </th>
                    <th>
                        @Html.DropDownListFor(model => model.ToArray()[i].GeneroId, new SelectList(ViewBag.GeneroId, "Value", "Text", Model.ToArray()[i].GeneroId), "Seleccione...", htmlAttributes: new { @class = "form-control col-6" })
                    </th>
                    <th>
                        @Html.EditorFor(m => Model.ToArray()[i].FechaInicio, new { htmlAttributes = new { @class = "form-control col-6" } })
                    </th>
                    <th>
                        @Html.EditorFor(m => Model.ToArray()[i].FechaTermino, new { htmlAttributes = new { @class = "form-control col-6" } })
                    </th>
                </tr>
            </tbody>
        }
    </table>
</div>