@model DAES.Web.BackOffice.Controllers.HomeController.DTOResume
@*@{
    ViewBag.Title = "Sistema integrado DAES";
}*@

@if (HttpContext.Current.User.Identity.IsAuthenticated && Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.Admininstrador && Model.ProcesoCount > 0)
{
    <div class="alert alert-danger">
        Existen procesos pendientes de término. @Html.ActionLink("Ver procesos pendientes", "Index", "Dashboard", null, new { @class = "alert-link" })
    </div>
}

@if (Model.WorkflowCount > 0)
{
    <div class="alert alert-danger">
        Existen tareas asignadas pendientes de término. @Html.ActionLink("Ver tareas pendientes", "Index", "Inbox", null, new { @class = "alert-link" })
    </div>
}

<div class="row">
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        if (Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.AreaLegal || Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.AreaContable)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Procesos</h3>
                    </div>
                    <div class="panel-body">

                        Iniciar procesos
                        <ul>
                            <li>@Html.ActionLink("Iniciar proceso desde gestión documental", "Documento", "Proceso")</li>
                            <li>@Html.ActionLink("Iniciar proceso manualmente", "Create", "Proceso")</li>
                        </ul>

                    </div>
                </div>
            </div>
        }

        if (Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.Admininstrador)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Administración</h3>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Ayuda", "Index", "Ayuda")</li>
                            <li>@Html.ActionLink("Cargos", "Index", "Cargo")</li>
                            <li>@Html.ActionLink("Comunas", "Index", "Comuna")</li>
                            <li>@Html.ActionLink("Configurar solicitud de certificados", "Index", "ConfiguracionCertificado")</li>
