                        </ul>
                    </div>
                </div>
            </div>
        }

        if (Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.Transparencia)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Exportar organizaciones</h3>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Exportar organizaciones a Excel", "Download", "Organizacion")</li>
                        </ul>
                    </div>
                </div>
            </div>
        }

        if (Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.Secretaria)
