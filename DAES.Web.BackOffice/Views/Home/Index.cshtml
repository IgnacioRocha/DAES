@model DAES.Web.BackOffice.Controllers.HomeController.DTOResume
@*@{
        ViewBag.Title = "Sistema integrado DAES";
    }*@

@if (HttpContext.Current.User.Identity.IsAuthenticated && Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.Admininstrador && Model.ProcesoCount > 0)
{
