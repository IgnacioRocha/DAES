        if (Model.PerfilId == (int)DAES.Infrastructure.Enum.Perfil.Jefatura)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Procesos</h3>
                    </div>
                    <div class="panel-body">
