                            <li>@Html.ActionLink("Géneros", "Index", "Genero")</li>
                            <li>@Html.ActionLink("Hechos legales", "Index", "HechoLegal")</li>
                            <li>@Html.ActionLink("Hechos contables", "Index", "HechoContable")</li>
                            <li>@Html.ActionLink("Organizaciones", "Index", "Organizacion")</li>
                            <li>@Html.ActionLink("Regiones", "Index", "Region")</li>
                            <li>@Html.ActionLink("Rubros", "Index", "Rubro")</li>
                            <li>@Html.ActionLink("Situación", "Index", "Situacion")</li>
                            <li>@Html.ActionLink("Subrubros", "Index", "SubRubro")</li>
                            <li>@Html.ActionLink("Tipos de documentos", "Index", "TipoDocumento")</li>
                            <li>@Html.ActionLink("Tipos de organizaciones", "Index", "TipoOrganizacion")</li>
                            
                            <li>@Html.ActionLink("Tipos de materia", "Index", "TipoMateria")</li>
                            <li>@Html.ActionLink("Tipos de criterios", "Index", "TipoCriterio")</li>
                            <li>@Html.ActionLink("Tipos de fiscaliazción", "Index", "TipoFiscalizacion")</li>
                            <li>@Html.ActionLink("Tipos de hallazgos", "Index", "TipoHallazgo")</li>
                            <li>@Html.ActionLink("Tipos de oficios", "Index", "TipoOficio")</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Procesos</h3>
                    </div>
                    <div class="panel-body">
                        Definición de procesos
                        <ul>
                            <li>@Html.ActionLink("Definir   tareas", "Index", "TipoWorkflow")</li>
                            <li>@Html.ActionLink("Definir procesos", "Index", "DefinicionProceso")</li>
                        </ul>

