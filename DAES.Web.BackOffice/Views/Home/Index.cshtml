                            <li>@Html.ActionLink("Exportar procesos a Excel", "DownloadProcesos", "ProcesoConsultor")</li>
                            <li>@Html.ActionLink("Exportar tareas a Excel", "DownloadTareas", "ProcesoConsultor")</li>
                        </ul>
                    </div>
                </div>
            </div>
        }


        if (Model.PerfilId != (int)DAES.Infrastructure.Enum.Perfil.SIAC)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Mis tareas y documentos</h3>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>@Html.ActionLink("Mis tareas y documentos", "Index", "Inbox")</li>
                        </ul>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Consulta</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>@Html.ActionLink("Organizaciones", "Index", "OrganizacionConsultor")</li>
                        <li>@Html.ActionLink("Procesos", "Index", "ProcesoConsultor")</li>
                        <li>@Html.ActionLink("Documentos", "Index", "DocumentoConsultor")</li>
                        <li>@Html.ActionLink("Ayuda", "Show", "Ayuda")</li>
                        
                        @if (Model.PerfilId != (int)DAES.Infrastructure.Enum.Perfil.SIAC)
                        {
                            <li>@Html.ActionLink("Fiscalizaciones", "Index", "Fiscalizacion")</li>
                        }

                    </ul>
