@model DAES.Model.SistemaIntegrado.Hallazgo

<h2>Nuevo hallazgo</h2>

<a href="javascript:void(0);" onclick="history.go(-1);">Volver a la lista</a>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => Model.FiscalizacionId)

    <div class="panel panel-default">
        <div class="panel-heading">Organización</div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => Model.TipoMateriaId, "Tipo materia", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => Model.TipoMateriaId, null, "Seleccione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.TipoMateriaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.TipoCriterioId, "Tipo criterio", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => Model.TipoCriterioId, null, "Seleccione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.TipoCriterioId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.Descripcion, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => Model.Descripcion, null, "Seleccione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => Model.TipoHallazgoId, "Tipo hallazgo", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => Model.TipoHallazgoId, null, "Seleccione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.TipoHallazgoId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => Model.Plazo, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => Model.Plazo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.Plazo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => Model.Respondido)
                        @Html.LabelFor(model => Model.Respondido)
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => Model.Resuelto)
                        @Html.LabelFor(model => Model.Resuelto)
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => Model.Orden, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => Model.Orden, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.Orden, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
}