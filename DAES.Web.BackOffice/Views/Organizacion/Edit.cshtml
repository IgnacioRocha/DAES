@Html.ActionLink("Volver al listado", "Index")



<script type="text/javascript">
    $(document).ready(function () {

        if ("#a" == 1) {
            $("#Tiene").prop("checked", true);
        } else {

            $("#Tiene").prop("checked", false);
        }


        $("#Tiene").change(function () {
            if ($("#Tiene").is(':checked')) {
                $("#divSane").show();
            } else {
                $("#divSane").hide();
            }
        });

        if ("#b" == 1) {
            $("#b").show();
        }





        $("input[name=Constitucion]").click(function () {
            if ($('input:radio[name=Constitucion]:checked').val().toString() == "Si") {
                $("#CPostRPost").show();
                $("#divExis").hide();
            } else {
                $("#CPostRPost").hide();
                $("#divExis").show();
            }
        });

        $("input[name=FReforma]").click(function () {
            if ($('input:radio[name=FReforma]:checked').val().toString() == "Si") {
                $("#reformaDivPost").show();
                $("#reformaDiv").hide();
            } else {
                $("#reformaDivPost").hide();
                $("#reformaDiv").show();
            }
        });

    });

</script>

