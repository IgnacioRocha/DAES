                            <input type="radio" name="posterior" id="posterior" class="no" /> No
                        </td>
                    </tr>
                </table>

            <div id="divAnterior" name="divAnterior">
                <table class="table table-hover table-striped dataTable">
                    @for (var i = 0; i < Model.Disolucions.Count(); i++)
