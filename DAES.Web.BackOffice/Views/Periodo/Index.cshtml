@{
    ViewBag.Title = "Periodos";
}

<style>
    .module {
        border: 1px solid #e5e5e5;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.05);
        margin-bottom: 20px;
    }

    .module-title {
        font-weight: 600;
        font-size: 1.25em;
        margin-bottom: 15px;
    }

    .module-link {
        text-decoration: none;
        color: #007bff; /*color azul por defecto de bootstrap*/
        margin-left: 10px;
    }

        .module-link:hover {
            text-decoration: underline;
        }
</style>

<div class="col-md-4">
    <div class="module">
        <div class="module-title">Periodos supervision CAC´s</div>
        <span>Para ingresar a la administración, </span>@Html.ActionLink("haga clic aquí", "PeriodoCac", "Periodo", null, new { @class = "module-link" })
    </div>
</div>

<div class="col-md-4">
    <div class="module">
        <div class="module-title">Periodos supervision NO CAC´s</div>
        <span>Para ingresar a la administración, </span>@Html.ActionLink("haga clic aquí", "PeriodoNoCac", "Periodo", null, new { @class = "module-link" })
    </div>
</div>

<div class="col-md-4">
    <div class="module">
        <div class="module-title">Periodos Articulo 90 (Inciso Primero y Segundo)</div>
        <span>Para ingresar a la administración, </span>@Html.ActionLink("haga clic aquí", "PeriodoArticulo90", "Periodo", null, new { @class = "module-link" })
    </div>
</div>
