@model DAES.Model.SistemaIntegrado.ApplicationUser

@{
    ViewBag.Title = "Eliminar cuenta de usuario";
    ViewBag.SubTitle = "Cuenta de usuario";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Perfil.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Perfil.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailNotificacionTarea)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmailNotificacionTarea)
        </dd>
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <a href="#ModalConfirm" data-toggle="modal" class="btn btn-primary">Eliminar</a>
        @*@Html.ActionLink("Volver a la lista", "Index")*@

        <div class="modal fade" id="ModalConfirm" tabindex="-1" role="dialog" aria-labelledby="myModal-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModal-label"><strong>Confirmación de operación</strong></h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Al eliminar esta cuenta, el usuario asociado no podrá acceder al sistema. Esta operación es irrecuperable.
                            <br />
                            <br>
                            Confirma la eliminación de la cuenta?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Confirmar eliminación" class="btn btn-primary" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
