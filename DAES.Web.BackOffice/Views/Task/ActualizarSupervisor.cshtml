@model DAES.Web.BackOffice.Controllers.TaskModel
@{
    ViewBag.Title = "Ejecución de tarea";
}

<ul class="nav nav-tabs">
    <li class="active">
        <a href="#Info" data-toggle="tab">Información de la tarea</a>
    </li>
    <li>
        <a href="#Do" data-toggle="tab">Ejecutar tarea</a>
    </li>
</ul>

<div class="tab-content">
    <div class="tab-pane fade in active" id="Info">
        <br />
        @Html.Partial("_WorkflowDetails", Model.Workflow)
        @Html.Partial("_ProcesoDetails", Model.Workflow.Proceso)
        @Html.ActionLink("Enviar tarea", "Send", "Task", new { Model.Workflow.WorkflowId }, new { @class = "btn btn-primary" })
    </div>

    <div class="tab-pane fade" id="Do">
        <br />
        @using (Html.BeginForm("ActualizarSupervisor", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Workflow.WorkflowId)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="panel panel-default">
                <div class="panel-heading">Datos del solicitante</div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Rut)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Rut)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Nombres)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Nombres)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Apellidos)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Apellidos)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Fono)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ActualizacionOrganizacion.Proceso.Solicitante.Fono)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    @if (Model.SupervisorAuxiliar == null)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading">Solicitud de actualización de datos</div>
                            <div class="panel-body">
                                <div class="form">

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.SupervisorAuxiliarId)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.SupervisorAuxiliarId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.RazonSocial)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.RazonSocial, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.Rut, "Tipo organización")
                                        @Html.DropDownListFor(model => model.SupervisorAuxiliar.Rut, (SelectList)ViewBag.TipoOrganizacionId, "Seleccione...", htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.Telefono)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.Telefono, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.TipoPersonaJuridica, "Estado")
                                        @Html.DropDownListFor(model => model.SupervisorAuxiliar.TipoPersonaJuridicaId, (SelectList)ViewBag.TipoPersonaJuridicaId, "Seleccione...", new { @class = "form-control", @readonly = "readonly" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.DomicilioLegal)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.DomicilioLegal, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.CorreoElectronico)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.CorreoElectronico, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-7">
                    @if (Model.SupervisorAuxiliar != null)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading">Datos actuales de organización</div>
                            <div class="panel-body">
                                <div class="form">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.SupervisorAuxiliarId)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.SupervisorAuxiliarId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.RazonSocial)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.RazonSocial, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SupervisorAuxiliar.RazonSocial, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.TipoPersonaJuridicaId, "Tipo organización")
                                        @Html.DropDownListFor(model => model.SupervisorAuxiliar.TipoPersonaJuridicaId, (SelectList)ViewBag.TipoOrganizacionId, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SupervisorAuxiliar.TipoPersonaJuridicaId, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.Rut)
                                        @Html.EditorFor(model => model.SupervisorAuxiliar.Rut, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SupervisorAuxiliar.Rut, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.DomicilioLegal, "Estado")
                                        @Html.DropDownListFor(model => model.SupervisorAuxiliar.DomicilioLegal, (SelectList)ViewBag.EstadoId, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SupervisorAuxiliar.DomicilioLegal, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.Telefono, "Situacion")
                                        @Html.DropDownListFor(model => model.SupervisorAuxiliar.Telefono, (SelectList)ViewBag.SituacionId, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SupervisorAuxiliar.Telefono, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SupervisorAuxiliar.CorreoElectronico, "Rubro")
                                        @Html.DropDownListFor(model => model.SupervisorAuxiliar.CorreoElectronico, (SelectList)ViewBag.RubroId, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SupervisorAuxiliar.CorreoElectronico, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    }
                </div>
            </div>

            <input type="submit" value="Guardar" class="btn btn-primary" />
        }
    </div>
</div>

@{
    ViewBag.Title = "_ActualizarSupervisor";
}


