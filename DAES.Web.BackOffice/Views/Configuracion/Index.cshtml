@model IEnumerable<DAES.Model.SistemaIntegrado.Configuracion>

@{
    ViewBag.Title = "Configuración";
}

<p class="text-danger">
    La configuración inadecuada de estos parámetros puede causar un mal funcionamiento del sistema.
</p>

<table class="table table-hover table-striped datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ConfiguracionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfiguracionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ConfiguracionId })
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
@Html.ActionLink("Crear nuevo", "Create") | @Html.ActionLink("Volver al inicio", "Index", "Home")