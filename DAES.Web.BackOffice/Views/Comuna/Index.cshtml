@model IEnumerable<DAES.Model.SistemaIntegrado.Comuna>

@{
    ViewBag.Title = "Comunas";
}

@using GridMvc.Html
@Html.Grid(Model).Sortable(true).Columns(columns =>
{
    columns.Add(q => q.ComunaId).Titled("Id").Sortable(true).Filterable(true);
    columns.Add(q => q.Nombre).Titled("Comuna").Sortable(true).Filterable(true);
    columns.Add(q => q.Region.Nombre).Titled("Región").Sortable(true).Filterable(true);
    columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Detalles", "Details", new { id = q.ComunaId }));
}).WithPaging(10).EmptyText("No se encontraron registros.").SetLanguage("es").Selectable(false).WithMultipleFilters()

<hr />
