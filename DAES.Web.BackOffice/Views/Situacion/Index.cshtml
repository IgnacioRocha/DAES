@model IEnumerable<DAES.Model.SistemaIntegrado.Situacion>

@{
    ViewBag.Title = "Estados";
}

@using GridMvc.Html
@Html.Grid(Model).Sortable(true).Columns(columns =>
{
    columns.Add(q => q.SituacionId).Titled("Id").Sortable(true).Filterable(true);
    columns.Add(q => q.Nombre).Titled("Estado").Sortable(true).Filterable(true);
    columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Detalles", "Details", new { id = q.SituacionId }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Editar", "Edit", new { id = q.SituacionId }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Eliminar", "Delete", new { id = q.SituacionId }));
}).WithPaging(10).EmptyText("No se encontraron registros.").SetLanguage("es").Selectable(false).WithMultipleFilters()

<hr />
