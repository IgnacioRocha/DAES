@model IEnumerable<DAES.Model.SistemaIntegrado.TipoHallazgo>
@{
    ViewBag.Title = "Tipo de hallazgo";
}

<table class="table table-hover table-striped datatable">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().TipoHallazgoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoHallazgoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.TipoHallazgoId })
                </td>
            </tr>
        }
    </tbody>
</table>

