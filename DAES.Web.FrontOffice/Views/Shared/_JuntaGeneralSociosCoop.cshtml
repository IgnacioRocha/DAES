
@model DAES.Model.DTO.DTOJuntaGeneralSociosCoop

<table class="table table-responsive">
    <tr>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().NombreCompleto, "(*)Nombre Completo")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().Rut, "(*)Rut")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().Cargo.Nombre, "(*)Cargo")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().Genero.Nombre)
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().FechaInicio, "(*)Fecha de Inicio")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().FechaTermino,"(*)Fecha de Termino")
        </th>
    </tr>
    @for (int i = 0; i < Model.Directorio.Count; i++)
    {
        <tr>
            @Html.HiddenFor(model => Model.Directorio[i].DirectorioId)

            @Html.EditorFor(m => Model.Directorio[i])

            <td>
                @Ajax.ActionLink("Eliminar", "DirectorioDelete", "ActualizarJuntaGeneralSociosCoop", new { Model.Directorio[i].Id }, new AjaxOptions { UpdateTargetId = "JuntaGeneralSociosCoop" })
            </td>
        </tr>
    }
</table>
