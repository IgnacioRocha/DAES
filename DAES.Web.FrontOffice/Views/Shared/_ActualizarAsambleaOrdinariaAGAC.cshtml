@model DAES.Model.DTO.DTOAsambleaOrdinariaDirectorio

<table class="table table-responsive">
    <tr>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().NombreCompleto, "(*)nombre Completo")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().Rut, "(*)Rut")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().Cargo.Nombre, "(*)Cargo")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().Genero.Nombre,"Género")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().FechaInicio, "(*)Fecha Inicio")
        </th>
        <th>
            @Html.LabelFor(model => model.Directorio.FirstOrDefault().FechaTermino, "(*)Fecha Termino")
        </th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Directorio.Count; i++)
    {
        <tr>
            @Html.HiddenFor(model => Model.Directorio[i].DirectorioId)

            @Html.EditorFor(m => Model.Directorio[i])

            <td>
                @Ajax.ActionLink("Eliminar", "DirectorioDelete", "ActualizarAsambleaOrdinariaAGAC", new { Model.Directorio[i].Id }, new AjaxOptions { UpdateTargetId = "AsambleaOrdinariaAGAC" })
            </td>
        </tr>
    }
</table>
