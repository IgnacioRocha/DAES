@model DAES.Model.DTO.DTOVerificacionCertificado

<h1 class="display-4 my-3">Verificar documento</h1>
<p class="lead"></p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron shadow-sm rounded">
        <h3>Búsqueda de documento</h3>
        <p class="lead">Ingrese el número del documento</p>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-sm-12 col-md-10 col-lg-8">
                <div class="form-group">
                    @Html.EditorFor(m => Model.id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => Model.id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <button class="btn btn-primary" type="submit">Buscar documento</button>
    </div>
}

<p class="pb-3">
    Volver al <a href='@Url.Action("Index", "Home")'>DAES digital</a>
</p>
