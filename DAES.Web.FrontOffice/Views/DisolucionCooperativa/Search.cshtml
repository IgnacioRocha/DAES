@model DAES.Web.FrontOffice.Controllers.DisolucionCooperativaController.SearchModel
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Disolución cooperativa</h1>
        @*<p class="lead">Permite inscribir la disolución de una cooperativa, que cumple con los requisitos que exige la ley y su reglamento, en el registro de cooperativas vigentes, del departamento de cooperativas de la Subsecretaría de Economía y Empresas de Menor Tamaño.</p>
        <p class="lead">Todos los trámites de esta sección requiren <a href="https://claveunica.gob.cl/" target="_blank">clave única.</a> </p>
        <a id="linkGo" href='@Url.Action("Start")' class="btn btn-primary btn-rounded">Iniciar trámite</a>*@
    </div>
</div>
<div class="container my-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Búsqueda de organización</h5>
                <p class="card-title">Ingrese el número de registro o razón social</p>
                <div class="form-group">
                    @Html.EditorFor(m => Model.Filter, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => Model.Filter, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-rounded" type="submit">Buscar organización</button>
                </div>
            </div>
        </div>
    }
</div>
<div class="container my-3">
    @if (!Model.First)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Resultados</h5>

                @if (Model.Organizacions.Any())
                {
                    <table class="table table-hover">
                        @foreach (var item in Model.Organizacions)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroRegistro) - @Html.DisplayFor(modelItem => item.RazonSocial)
                                </td>
                                <td>
                                    <a href='@Url.Action("Create", new { id = item.OrganizacionId })' class="btn btn-primary btn-rounded">Seleccionar</a>

                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No se encontraron resultados</p>
                }
            </div>
        </div>
    }
</div>
<div class="container my-3">
    Volver al <a href='@Url.Action("Index", "Modificar")'>DAES digital</a>
</div>
