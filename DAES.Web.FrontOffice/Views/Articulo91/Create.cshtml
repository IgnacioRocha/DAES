@model DAES.Model.DTO.DTOArticulo91

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Cumplimiento del Artículo 91°</h1>
        <p class="lead">La presente documentación deberá ingresarse por la Cooperativa al sitio web, dentro de los treinta días siguientes al de la celebración de la Junta General de Socios en que se tomó conocimiento y aprobó el balance.</p>
    </div>
</div>
<div class="container my-3">
    @Html.Partial("_Message")
</div>


@if (Model == null)
{
    return;
}

<div class="container my-3">
    @using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RUTSolicitante)
        @Html.HiddenFor(model => model.NombresSolicitante)
        @Html.HiddenFor(model => model.ApellidosSolicitante)
        @Html.HiddenFor(model => model.OrganizacionId)
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="alert alert-danger" role="alert">
            <b>(*)</b> Campo Obligatorio
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Documentación</h5>
                        <p class="card-title">Ingrese la documentación solicitada</p>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Periodo, new { @class = "font-weight-bold" })
                            @Html.DropDownListFor(model => Model.Periodo, null, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Periodo, "", new { @class = "text-danger" })
                        </div>
                        <hr class="my-4">
                        <div class="form-group">
                            @Html.LabelFor(m => Model.FechaCelebracionUltimaJuntaGeneralSocios, new { @class = "font-weight-bold" })
                            <br />
                            <em>
                                Se debe indicar la fecha de celebración de la Junta General de Socios
                                en que se tomó conocimiento y aprobó el Balance General Anual:
                            </em>
                            @Html.EditorFor(m => Model.FechaCelebracionUltimaJuntaGeneralSocios, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaCelebracionUltimaJuntaGeneralSocios, "", new { @class = "text-danger" })
                        </div>
                        <hr  class="my-4"/>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Balance, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.Balance, null, new { @type = "file", @accept = "application/pdf" })
                            @Html.ValidationMessageFor(model => model.Estadoresultado, "", new { @class = "text-danger" })
                        </div>
                        <hr class="my-4">
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Estadoresultado, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.Estadoresultado, null, new { @type = "file", @accept = "application/pdf" })
                            @Html.ValidationMessageFor(model => model.Estadoresultado, "", new { @class = "text-danger" })
                        </div>
                        <hr class="my-4">
                        <div class="form-group">
                            @Html.LabelFor(m => Model.DictamenAuditorExterno, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(m => Model.DictamenAuditorExterno, null, new { @type = "file", @accept = "application/pdf" })<br />

                        </div>
                        <hr class="my-4">
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NombreGerente, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.NombreGerente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NombreGerente, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NombreContadorGeneral, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.NombreContadorGeneral, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NombreContadorGeneral, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Solicitante</h5>
                        <p class="card-title">Complete los datos de contacto</p>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => Model.RUTSolicitante, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.RUTSolicitante)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NombresSolicitante, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.NombresSolicitante)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.ApellidosSolicitante, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.ApellidosSolicitante)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.RegionSolicitanteId, new { @class = "font-weight-bold" })
                            @Html.DropDownListFor(m => Model.RegionSolicitanteId, null, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.RegionSolicitanteId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.FonoSolicitante, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.FonoSolicitante, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.FonoSolicitante, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.EmailSolicitante, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.EmailSolicitante, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.EmailSolicitante, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Cargo, new { @class = "font-weight-bold" })
                            @Html.DropDownListFor(model => Model.Cargo, null, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Cargo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.PoderRepresentativo, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.PoderRepresentativo, null, new { @type = "file", @accept = "application/pdf" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <p></p>
        <button class="btn btn-primary btn-rounded" type="submit">Enviar documentación</button>
    }
</div>
<div class="container my-3">
    Volver al <a href='@Url.Action("Index","Articulo91")'>DAES digital</a>
</div>

<script type="text/javascript">
    $(document).on('submit', 'form', function () {
        var buttons = $(this).find('[type="submit"]');
        if ($(this).valid()) {
            buttons.each(function (btn) {
                $(buttons[btn]).prop('disabled', true);
            });
        } else {
            buttons.each(function (btn) {
                $(buttons[btn]).prop('disabled', false);
            });
        }
    });
</script>
