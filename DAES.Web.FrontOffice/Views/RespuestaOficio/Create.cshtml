@model DAES.Model.DTO.DTORespuestaOficio

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Respuesta de oficio</h1>
    </div>
</div>

<div class="container">
    @Html.Partial("_Message")
</div>

@if (Model == null)
{
    return;
}

<div class="container">
    <div class="alert alert-primary" role="alert">
        <b>Importante: </b>Todos los documentos solicitados deben incluir firma electrónica avanzada
    </div>
</div>

<div class="container">
    @using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RUTSolicitante)
        @Html.HiddenFor(model => model.NombresSolicitante)
        @Html.HiddenFor(model => model.ApellidosSolicitante)
        @Html.HiddenFor(model => model.OrganizacionId)
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Organización</h5>
                        <p class="card-text">Detalles de la organización</p>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Organizacion.NumeroRegistro, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.Organizacion.NumeroRegistro)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Organizacion.RazonSocial, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.Organizacion.RazonSocial)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Organizacion.TipoOrganizacionId, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.Organizacion.TipoOrganizacion.Nombre)
                        </div>
                    </div>
                </div>
                <p></p>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Documentación</h5>
                        <p class="card-text">Ingrese la documentación solicitada</p>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NumeroDeOficio, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.NumeroDeOficio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.NumeroDeOficio, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.FechaSalidaOficio, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.FechaSalidaOficio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.FechaSalidaOficio, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.DescripcionDocumento, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.DescripcionDocumento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.DescripcionDocumento, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.File1, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.File1, null, new { @type = "file", @accept = "application/pdf" })<br />
                            @Html.ValidationMessageFor(model => model.File1, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.File2, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.File2, null, new { @type = "file", @accept = "application/pdf" })<br />
                            @Html.ValidationMessageFor(model => model.File2, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.File3, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.File3, null, new { @type = "file", @accept = "application/pdf" })<br />
                            @Html.ValidationMessageFor(model => model.File3, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.File4, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.File4, null, new { @type = "file", @accept = "application/pdf" })<br />
                            @Html.ValidationMessageFor(model => model.File4, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.File5, new { @class = "font-weight-bold" })<br />
                            @Html.TextBoxFor(m => Model.File5, null, new { @type = "file", @accept = "application/pdf" })<br />
                            @Html.ValidationMessageFor(model => model.File5, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Solicitante</h5>
                        <p class="card-text">Complete los datos de contacto</p>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => Model.RUTSolicitante, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.RUTSolicitante)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NombresSolicitante, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.NombresSolicitante)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.ApellidosSolicitante, new { @class = "font-weight-bold" })<br />
                            @Html.DisplayFor(m => Model.ApellidosSolicitante)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.RegionSolicitanteId, new { @class = "font-weight-bold" })
                            @Html.DropDownListFor(m => Model.RegionSolicitanteId, null, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.RegionSolicitanteId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.FonoSolicitante, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.FonoSolicitante, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.FonoSolicitante, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.EmailSolicitante, new { @class = "font-weight-bold" })
                            @Html.EditorFor(m => Model.EmailSolicitante, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => Model.EmailSolicitante, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-primary my-3" type="submit">Enviar solicitud</button>
    }
</div>
<div class="container my-3">
    Volver al <a href='@Url.Action("Index", "DAES")'>DAES digital</a>
</div>

<script type="text/javascript">

    $(document).on('submit', 'form', function () {
        var buttons = $(this).find('[type="submit"]');
        if ($(this).valid()) {
            buttons.each(function (btn) {
                $(buttons[btn]).prop('disabled', true);
            });
        } else {
            buttons.each(function (btn) {
                $(buttons[btn]).prop('disabled', false);
            });
        }
    });

    $(document).ready(function () {
        $('#RegionId').on('change', function () {
            var RegionId = $(this).val();
            $.getJSON("/Organizacion/GetComuna", { RegionId: RegionId },
                function (classesData) {
                    var select = $("#ComunaId");
                    select.empty();
                    select.append($('<option/>', {
                        value: 0,
                        text: "Seleccione..."
                    }));
                    $.each(classesData, function (index, itemData) {
                        select.append($('<option/>', {
                            value: itemData.Value,
                            text: itemData.Text
                        }));
                    });
                });
        });
    });
</script>
