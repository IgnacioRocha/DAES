@model IEnumerable<DAES.Model.SistemaIntegrado.Ciudad>

@{
    ViewBag.Title = "Ciudades";
}

@using GridMvc.Html
@Html.Grid(Model).Sortable(true).Columns(columns =>
    {
        columns.Add(q => q.CiudadId).Titled("Id").Sortable(true).Filterable(true);
        columns.Add(q => q.Nombre).Titled("Ciudad").Sortable(true).Filterable(true);
        columns.Add(q => q.Region.Nombre).Titled("Región").Sortable(true).Filterable(true);
        columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Detalles", "Details", new { id = q.CiudadId }));
        columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Editar", "Edit", new { id = q.CiudadId }));
        columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(q => @Html.ActionLink("Eliminar", "Delete", new { id = q.CiudadId }));
    }).WithPaging(10).EmptyText("No se encontraron registros.").SetLanguage("es").Selectable(false).WithMultipleFilters()

<hr />
